<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Booking ID</th>
        <th>Departure</th>
        <th>Arrival</th>
        <th>User</th>
        <th>Aircraft</th>
        <th>Price</th>
        <th class="text-center" colspan="2"> Action  </th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |b| %>
        <tr>
          <td><%= b.id%></td>
          <td><%= b.start_time.strftime("%d/%m/%Y") %></td>
          <td><%= b.finish_time.strftime("%d/%m/%Y")%></td>
          <td><%= b.user.first_name %></td>
          <td><%= b.aircraft.name%></td>
          <td>USD <%= (b.finish_time.try(:to_date) - b.start_time.try(:to_date)+1).to_i * b.aircraft.price%></td>
          <td><%= link_to 'Boarding', booking_path(b) %></td>
          <td><%= link_to 'Edit', edit_booking_path(b) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
