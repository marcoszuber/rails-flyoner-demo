<div>

  <%= form_with model: @booking  do |form| %>

    <div class="container border p-4 mt-4 rounded shadow">
      <h1 class="text-center"> Boarding Pass </h1>
      <div class="row g-2 mb-1">
        <div class="col-md">
          <div class="form-floating mb-1">
            <%= form.date_field :start_time, class: "form-control", disabled: true%>
            <%= form.label :Departure_Date %>
          </div>
        </div>
        <div class="col-md">
          <div class="form-floating mb-1">
            <%= form.date_field :finish_time, class: "form-control", disabled: true%>
            <%= form.label :Arrival_Date %>
          </div>
        </div>
      </div>

      <div class="row g-2 mb-1">
        <div class="col-md">
          <div class="form-floating mb-1">
            <%= form.collection_select(:from, Airport.all, :id, :name, {:prompt => 'Seleccione'}, class: "form-select", id: "airport", disabled: true ) %>
            <%= form.label :Departure %>
          </div>
        </div>
        <div class="col-md">
          <div class="form-floating mb-1">
            <%= form.collection_select(:to, Airport.all, :id, :name, {:prompt => 'Seleccione'}, class: "form-select", id: "airport", disabled: true ) %>
            <%= form.label :Arrival %>
          </div>
        </div>
      </div>

      <div class="row g-2 mb-1">
        <div class="col-md">
          <div class="form-floating mb-1">
            <%= form.collection_select(:aircraft_id, Aircraft.all, :id, :name, {:prompt => 'Seleccione'}, class: "form-select", id: "Seleccione" , disabled: true) %>
            <%= form.label :Aircraft %>
          </div>
        </div>
        <div class="col-md">
          <div class="form-floating mb-1">
            <p class="form-control"> <%=@booking.total_price %> </p>
            <%= form.label :Price, "Price USD" %>
          </div>
        </div>
      </div>


      <div class="row g-2 mb-1">
        <div class="row g-2 mb-1">
          <div class="col-md">
          </div>
          <%= image_tag "PDF417.png",  height: "150" %>
        </div>
      </div>
      <p><%= link_to "Add Review", new_booking_review_aircraft_path(@booking), class: "btn btn-dark mt-5" %></p>
    </div>
  <% end %>
</div>
