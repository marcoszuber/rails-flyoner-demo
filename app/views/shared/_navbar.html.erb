<nav class="d-flex align-items-center justify-content-between px-4 px-md-5 bg-white overflow-auto">

  <%= link_to root_path do %>
    <%= image_tag "logo.png", class: "logo"%>
  <% end %>



  <div class="d-flex">
    <%= link_to 'Aircrafts', aircrafts_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id: 'links-nav-mm' %>
    <%= link_to 'Empty Legs', empty_legs_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id: 'links-nav-mm' %>
    <% if user_signed_in? %>
      <% if current_user.owner? %>
        <%= link_to 'Rent your aircraft', new_aircraft_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id: 'links-nav-mm' %>
        <%= link_to 'My Aircrafts', my_aircrafts_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id: 'links-nav-mm' %>
      <% end %>
      <div class="d-flex ms-auto">
        <% if current_user.client? %>
          <%= link_to 'My Bookings', bookings_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id: 'links-nav-mm' %>
        <% end %>
        <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-5 my-0 text-center', id: 'links-nav-mm' %>
        <div class="d-flex align-items-center px-6 px-md-4 bg-white">

          <% if current_user.photo.key != nil %>
            <%= link_to edit_user_registration_path do %>
              <%= image_tag current_user.photo, class: "rounded-circle", style: "width: 50px; height: 50px;" %>
            <% end %>
          <% else %>
            <%= link_to edit_user_registration_path do %>
              <%= image_tag 'default-avatar.jpeg', class: "rounded-circle", style: "width: 50px; height: 50px;" %>
            <% end %>
          <% end %>
        </div>
        </div>
      <% else %>

        <%= link_to 'Log in', new_user_session_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id: 'links-nav-mm' %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'h5 link-dark text-decoration-none py-5 ms-5 me-4 my-0 text-center', id: 'links-nav-mm' %>

      <% end %>
      </div>
  </div>

</nav>
